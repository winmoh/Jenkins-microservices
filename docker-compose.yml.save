version: '3.8'

services:
  gateway-service:
    image: gateway-service
    ports:
      - "9191:9191"
    depends_on:
      - discovery-service
      - product-service
      - order-service
  discovery-service:
    image: discovery-service
    ports:
      - "8761:8761"

  product-service:
    image: product-service
    ports:
      - "9090:9090"
    depends_on:
      - gateway-service
      - discovery-service
      - postgres-db
  postgres-db:
    image: mysql:latest
    ports:
      - "3306:3306"
    environment:
      - MYSQL_ROOT_PASSWORD= Mysql2023@
      - MYSQL_DATABASE= service-db
  order-service:
    image: order-service:latest
    ports:
      - "9292:9292"
    depends_on:
      - gateway-service

